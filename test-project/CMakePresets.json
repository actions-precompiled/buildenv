{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-amd64",
      "displayName": "Linux AMD64",
      "description": "Native build for Linux x86_64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "/toolchains/linux-amd64.cmake"
      }
    },
    {
      "name": "linux-aarch64",
      "displayName": "Linux ARM64",
      "description": "Cross-compilation for Linux aarch64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "/toolchains/linux-aarch64.cmake"
      }
    },
    {
      "name": "windows-amd64",
      "displayName": "Windows AMD64",
      "description": "Cross-compilation for Windows x86_64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "/toolchains/windows-amd64.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-amd64",
      "configurePreset": "linux-amd64",
      "targets": ["package-zip"]
    },
    {
      "name": "linux-aarch64",
      "configurePreset": "linux-aarch64",
      "targets": ["package-zip"]
    },
    {
      "name": "windows-amd64",
      "configurePreset": "windows-amd64",
      "targets": ["package-zip"]
    }
  ]
}
